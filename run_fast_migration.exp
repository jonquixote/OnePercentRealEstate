# Verify duplicate count is now 0
send "docker exec infrastructure-postgres-1 psql -U postgres -d postgres -c \"SELECT COUNT(*) as dup_groups FROM (SELECT address, listing_type FROM listings GROUP BY address, listing_type HAVING COUNT(*) > 1 LIMIT 10) sub;\"\r"
